<?xml version="1.0"?>
<log4net>
    <root>
        <priority value="Info"/>
        <appender-ref ref="AsynchronousLog4NetAppender" />
    </root>

    <logger name="ATG.Moet.Cms.Plugins.IcemanImport">
        <priority value="Debug" />
        <appender-ref ref="AsynchronousIcemanAppender" />
    </logger>

    <logger name="ATG.Moet.Cms.Plugins.TableauExport">
        <priority value="Debug" />
        <appender-ref ref="AsynchronousTableauExportAppender" />
    </logger>

    <logger name="ATG.Moet.Cms.Plugins.MoetPublishSchedule">
        <priority value="Debug" />
        <appender-ref ref="AsynchronousMoetPublishScheduleAppender" />
    </logger>

    <!--To Change the way logging works for certain namespaces, insert a new logger like: -->
    <!--
	<logger name="Umbraco.Core">
		<level value="WARN" />
	</logger>-->

    <appender name="AsynchronousLog4NetAppender" type="Umbraco.Core.Logging.AsynchronousRollingFileAppender, Umbraco.Core">
        <file value="App_Data\Logs\UmbracoTraceLog.txt" />
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <appendToFile value="true" />
        <rollingStyle value="Date" />
        <maximumFileSize value="5MB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
        <encoding value="utf-8" />
    </appender>

    <appender name="AsynchronousIcemanAppender" type="Umbraco.Core.Logging.AsynchronousRollingFileAppender, Umbraco.Core">
        <file value="App_Data\Logs\Iceman.log" />
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <appendToFile value="true" />
        <rollingStyle value="Date" />
        <maximumFileSize value="20MB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
        <encoding value="utf-8" />
    </appender>

    <appender name="AsynchronousTableauExportAppender" type="Umbraco.Core.Logging.AsynchronousRollingFileAppender, Umbraco.Core">
        <file value="App_Data\Logs\TableauExport.log" />
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <appendToFile value="true" />
        <rollingStyle value="Date" />
        <maximumFileSize value="20MB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
        <encoding value="utf-8" />
    </appender>

    <appender name="AsynchronousMoetPublishScheduleAppender" type="Umbraco.Core.Logging.AsynchronousRollingFileAppender, Umbraco.Core">
        <file value="App_Data\Logs\MoetPublishSchedule.log" />
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <appendToFile value="true" />
        <rollingStyle value="Date" />
        <maximumFileSize value="20MB" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
        <encoding value="utf-8" />
    </appender>
</log4net>
